<%- include('header.ejs') %>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Itim&display=swap');

        .main {
            min-height: 85%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .wrapper {
            display: flex;
            justify-content: center;
            min-width: 60%;
            max-width: 80%;
            min-height: 15rem;
            max-height: 20rem;
            border-radius: 2rem;
            opacity: 0.8;
            background-color: #DF7C78;
            padding: 1rem;
        }

        .left {
            display: flex;
            flex-direction: column;
            width: 30%;
        }

        .right {
            display: flex;
            flex-direction: column;
        }

        .update {
            border-radius: 0.5rem;

            padding: 0.5rem;
            border: none;
            cursor: pointer;
            background-color: #F8D1D1;
            color: #DF7C78;
            font-family: 'Itim', cursive;
            font-size: large;

        }

        .box {
            display: flex;
            justify-content: right;
            align-items: center;
            gap: 1rem;
            width: 25rem;
        }



        textarea,
        input[type=text] {
            border-radius: 1rem;
            border: none;
            padding: 0.5rem;
            outline: none;
            text-align: center;
        }

        textarea,
        input[type=text]:active,
        input[type="text"]:focus {
            border-radius: 1rem;
            border: none;
        }

        .btn {
            display: flex;
            margin-top: 1rem;
            width: 25rem;
            justify-content: flex-end;
        }
    </style>

    <div class="main">
        <h1>Recipe Name</h1>
        <div class="wrapper">
            <div class="left">
                <p>Time: 15</p>
                <p>Ingredients:eggs</p>
                <p>Instructions: Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptas, atque. Quisquam
                    voluptatum quibusdam inventore fuga architecto doloremque, quas eos minus. Iure quisquam facilis
                    sed. Doloribus maiores suscipit soluta assumenda sequi?</p>
            </div>
            <div class="right">
                <div class="box">
                    <h4>Total time to prepare:</h4>
                    <input type="text">
                </div>
                <div class="box">
                    <h4>Ingredients:</h4>
                    <input type="text">
                </div>
                <div class="box">
                    <h4>Instructions:</h4>
                    <textarea name="instructions" cols="20" rows="4"></textarea>
                </div>
                <div class="btn">
                    <button class="update">update</button>
                </div>
            </div>
        </div>

    </div>

    <%- include('footer.ejs') %>

        </body>